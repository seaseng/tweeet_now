 <% if @error_messages %>
 <h2>User Not Created</h2>
 <h3>Please Try Again.</h3>
 <% @error_messages.each do |message| %>
 <p style='color:red'><%= message %></p>
 <% end %>

 <% end %>


<div class="span3">
  <h2>Sign Up</h2>
  <form class = 'login' method="post" action="/user/new">
    <label class='field_label'>Name</label>
    <input input type="text" name="user[name]"placeholder="name" required>
    <label class='field_label'>Email Address</label>
    <input type="email" name="user[email]"placeholder="email" required>
    <!-- <label>Username</label>
    <input type="text" name="username" placeholder='Username' class="span3"> -->
    <label class='field_label'>Password</label>
    <input type="password" name="user[password]" placeholder="password" required>
    <label class='field_label'>Password Confirmation</label>
    <input type="password" name="user[password_confirmation]" placeholder="confirm password" required>
    <!-- <label><input type="checkbox" name="terms"> I agree with the <a href="#">Terms and Conditions</a>.</label> -->
    <!-- <input type="submit" value="Sign up" class="btn btn-primary pull-right"> -->
    <input type="submit" value="Sign up" class="btn">
    <!-- <div class="clearfix"></div> -->
  </form>
</div>